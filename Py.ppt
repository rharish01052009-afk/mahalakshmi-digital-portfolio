from pptx import Presentation

# Create a new presentation
prs = Presentation()

# 1. Title Slide
title_slide_layout = prs.slide_layouts[0]  # Title Slide layout
slide1 = prs.slides.add_slide(title_slide_layout)

title = slide1.shapes.title
subtitle = slide1.placeholders[1]

title.text = "My First Presentation"
subtitle.text = "Created with Python 🐍"

# 2. Content Slide
bullet_slide_layout = prs.slide_layouts[1]  # Title and Content layout
slide2 = prs.slides.add_slide(bullet_slide_layout)

title = slide2.shapes.title
content = slide2.placeholders[1]

title.text = "Agenda"
content.text = "• Introduction\n• Main Content\n• Conclusion"

# Save presentation
prs.save("simple_presentation.pptx")
print("Presentation created successfully!")
